// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CREATOR
  RESPONDENT
}

model User {
  id                  String      @id @default(uuid())
  email               String      @unique
  roles               Role[]
  password            String?
  ssoUsername         String?
  firstName           String?
  lastName            String?
  phoneNumber         String?
  gender              String?
  companyName         String?
  birthDate           DateTime?
  credit              Int?
  isVerified          Boolean     @default(false)
  isBlocked           Boolean     @default(false)
  hasCompletedProfile Boolean     @default(false)
  Admin               Admin?
  Creator             Creator?
  Respondent          Respondent?
  Payment             Payment[]
  ReportTo            Report[]    @relation("to")
  ReportFrom          Report[]    @relation("from")
  Voucher             Voucher[]
}

model Admin {
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
}

model Creator {
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  emailNotificationActive Boolean @default(true)
  Form                    Form[]
}

model Respondent {
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  pity          Int             @default(0)
  Participation Participation[]
  Winner        Winner[]
}

model Payment {
  id     String @id @default(uuid())
  itemId Int
  item   Item   @relation(fields: [itemId], references: [id])
  userId String
  user   User   @relation(fields: [userId], references: [id])

  totalPayment Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Voucher   Voucher? @relation(fields: [voucherId], references: [id])
  voucherId String?
}

enum ItemCategory {
  BASIC_PLAN
}

model Voucher {
  id         String    @id @default(uuid())
  discount   Int
  expiredAt  DateTime
  isUsed     Boolean   @default(false)
  usedAt     DateTime?
  usedBy     User?     @relation(fields: [userId], references: [id])
  usedItemId Int?
  usedItem   Item?     @relation(fields: [itemId], references: [id])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String?
  itemId    Int?
  Payment   Payment[]
}

model Item {
  id                      Int          @id @default(autoincrement())
  title                   String
  price                   Int
  category                ItemCategory @default(BASIC_PLAN)
  advertisedOriginalPrice Int?
  description             String
  Payment                 Payment[]
  Voucher                 Voucher[]
}

model Report {
  toUserId   String
  toUser     User   @relation("to", fields: [toUserId], references: [id])
  fromUserId String
  fromUser   User   @relation("from", fields: [fromUserId], references: [id])

  message String

  @@id([toUserId, fromUserId])
}

enum PrizeType {
  EVEN
  LUCKY
}

model Form {
  id String @id @default(uuid())

  creatorId String
  creator   Creator @relation(fields: [creatorId], references: [userId])

  title          String
  prize          Int
  isDraft        Boolean   @default(true)
  isPublished    Boolean   @default(false)
  maxParticipant Int?
  prizeType      PrizeType
  maxWinner      Int?

  Participation Participation[]
  Winner        Winner[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  endedAt   DateTime?
  Section   Section[] // Better include Opening and Closing as section
  Question  Question[]
}

model Section {
  formId    String
  form      Form   @relation(fields: [formId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  sectionId Int    @default(autoincrement())

  name        String
  description String?
  Question    Question[]

  @@id([formId, sectionId])
}

model Participation {
  respondentId            String
  respondent              Respondent @relation(fields: [respondentId], references: [userId])
  formId                  String
  form                    Form       @relation(fields: [formId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  isCompleted             Boolean    @default(false)
  emailNotificationActive Boolean    @default(true)
  questionsAnswered       Int        @default(0)

  @@id([respondentId, formId])
}

model Winner {
  respondentId String
  respondent   Respondent @relation(fields: [respondentId], references: [userId])
  formId       String
  form         Form       @relation(fields: [formId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  isPaid Boolean @default(false)

  @@id([respondentId, formId])
}

enum QuestionType {
  TEXT // Applicable for SHORT_TEXT, LONG_TEXT, DATE, EMAIL, NUMBER, RATING, TIME, LINK, DROPDOWN
  CHECKBOX
  RADIO // Applicable for MULTIPLE_CHOICE, Yes/No, TRUE, LIKERT
}

model Question {
  formId    String
  sectionId Int?
  section   Section? @relation(fields: [formId, sectionId], references: [formId, sectionId], onDelete: Cascade, onUpdate: Cascade)
  form      Form     @relation(fields: [formId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  questionId Int @default(autoincrement())

  questionType     QuestionType
  questionTypeName String

  isRequired Boolean @default(false)

  question    String
  description String?

  Text     Text?
  Checkbox Checkbox?
  Radio    Radio?
  Answer   Answer[]

  @@id([formId, questionId])
}

model Text {
  formId     String
  questionId Int

  question Question @relation(fields: [formId, questionId], references: [formId, questionId], onDelete: Cascade, onUpdate: Cascade)

  @@id([formId, questionId])
}

model Checkbox {
  formId     String
  questionId Int

  question Question @relation(fields: [formId, questionId], references: [formId, questionId], onDelete: Cascade, onUpdate: Cascade)

  choice String[]

  @@id([formId, questionId])
}

model Radio {
  formId     String
  questionId Int

  question Question @relation(fields: [formId, questionId], references: [formId, questionId], onDelete: Cascade, onUpdate: Cascade)
  choice   String[]

  @@id([formId, questionId])
}

model Answer {
  respondentId String
  formId       String
  questionId   Int
  Question     Question @relation(fields: [formId, questionId], references: [formId, questionId], onDelete: Cascade, onUpdate: Cascade)

  // Store the answer in JSON format, the key is the nswer, 
  // value is an string or array of string, depends on the question type
  // and value of the answer
  // format like: 
  //  {"answer": "test123"}
  // or
  // {"answer": ["test123", "test456"]}
  // 
  answer    Json
  createdAt DateTime @default(now())

  @@id([respondentId, questionId, formId])
}

model VerificationToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  email     String
  expiresAt DateTime
  isUsed    Boolean  @default(false)

  @@map("verification_tokens")
}
